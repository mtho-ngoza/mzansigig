{
  "name": "kasigig",
  "version": "1.0.0",
  "description": "KasiGig - Empowering South Africa's Informal Sector Through Secure, Inclusive Gig Opportunities",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"firebase emulators:start --only auth,firestore,storage\" \"next dev\"",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest --watch",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:coverage": "jest --coverage",
    "test:emulator": "firebase emulators:exec --only auth,firestore,storage \"npm run test:ci\"",
    "emulators": "firebase emulators:start",
    "seed": "node scripts/seed-firestore.js",
    "seed:dev": "firebase use dev && FIREBASE_PROJECT_ID=kasigig-dev npm run seed",
    "seed:prod": "firebase use production && FIREBASE_PROJECT_ID=kasigig-production npm run seed",
    "seed:fee-config:dev": "ts-node scripts/seed-fee-config.ts dev",
    "seed:fee-config:prod": "ts-node scripts/seed-fee-config.ts production",
    "generate-icons": "node scripts/generate-icons.js"
  },
  "keywords": [
    "gig",
    "economy",
    "south-africa",
    "platform"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.13",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.21",
    "date-fns": "^4.1.0",
    "firebase": "^12.3.0",
    "next": "^15.5.3",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwindcss": "^4.1.13",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "concurrently": "^9.1.2",
    "dotenv": "^17.2.3",
    "eslint": "^9.36.0",
    "eslint-config-next": "^15.5.3",
    "firebase-admin": "^13.5.0",
    "firebase-tools": "^13.31.3",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "sharp": "^0.34.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
