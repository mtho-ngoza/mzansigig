# KasiGig - Firebase Configuration
# Copy this file to .env.local and update with your values

# === FOR LOCAL DEVELOPMENT ===
# Set to 'true' to use Firebase Emulators (Auth, Firestore, Storage)
# Set to 'false' or remove to use production Firebase
NEXT_PUBLIC_USE_EMULATOR=true

# Firebase Configuration for Emulators (Local Development)
# These are fake credentials that work with Firebase emulators
NEXT_PUBLIC_FIREBASE_API_KEY=fake-api-key-for-emulator
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=localhost
NEXT_PUBLIC_FIREBASE_PROJECT_ID=demo-kasigig
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=demo-kasigig.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abc123

# === FOR PRODUCTION ===
# When deploying to production, replace the above Firebase config with your actual Firebase project credentials:
# NEXT_PUBLIC_USE_EMULATOR=false
# NEXT_PUBLIC_FIREBASE_API_KEY=your_real_api_key
# NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
# NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
# NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
# NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
# NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Google Vision API for OCR (Optional - fallback will be used if not configured)
# Get your API key from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLOUD_API_KEY=your_google_vision_api_key_here

# Alternative: Use service account credentials file
# GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# OCR Configuration
OCR_ENABLED=true
OCR_CONFIDENCE_THRESHOLD=70

# Development Settings
NODE_ENV=development