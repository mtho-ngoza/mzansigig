# Firebase Configuration for Emulators (Local Development)
# These are fake credentials that work with Firebase emulators
NEXT_PUBLIC_FIREBASE_API_KEY=fake-api-key-for-emulator
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=localhost
NEXT_PUBLIC_FIREBASE_PROJECT_ID=demo-gig-sa
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=demo-gig-sa.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abc123

# Firebase Emulator Hosts (automatically connects to local emulators)
FIRESTORE_EMULATOR_HOST=localhost:8080
FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
FIREBASE_STORAGE_EMULATOR_HOST=localhost:9199

# Google Vision API for OCR (Optional - fallback will be used if not configured)
# Get your API key from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLOUD_API_KEY=your_google_vision_api_key_here

# Alternative: Use service account credentials file
# GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# OCR Configuration
OCR_ENABLED=true
OCR_CONFIDENCE_THRESHOLD=70

# Development Settings
NODE_ENV=development